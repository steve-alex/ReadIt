<!DOCTYPE html>
<html>
  <head>
    <title>ReadIt | The online bookshelf </title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    
    <div class="header-container-div">
      <div class="logo"><img src="https://i.imgur.com/Md6kVWP.png" alt=""></div>
      <% if current_user %>
        <div class="search-bar-div">
        <%= form_tag search_books_path do %>
          <%= select_tag(:search_id, options_for_select([['Title', 'intitle'], ["Author", "inauthor"], ["Subject", "subject"]])) %>
          <%= select_tag(:num_results_id, options_for_select([[10, 10], [25, 25], [40, 40]])) %>
          <%= text_field_tag :query %>
          <%= submit_tag "Search"%>
        <% end %>
        </div>
      <% end %>

      <div class="navigation-div" align="right">
        <% if current_user %>
          <h4>Currently logged in as: <%= current_user.username %></h4>
          <%= link_to "Home Page", user_path(current_user), method: :get%> |
          <%= link_to "Analytics", show_analytics_path(current_user), method: :get%> |
          <%= link_to "Settings", settings_path(current_user), method: :get%> | 
          <%= link_to "Log Out", sessions_path, method: :delete %>
        <% else %>
          <%= link_to "Log In", new_session_path %>
        <% end %>
      </div>

      
  </div>
  </div>
  </div>
    
  <%= yield %>

  <footer>
    <p>Dias-Alex Web Develeopment &copy; &reg; &trade;</p>
  </footer> 
  </body>
  
</html>